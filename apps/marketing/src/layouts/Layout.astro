---
import "../styles/global.css";
import ThemeToggle from "../components/ThemeToggle";

export interface Props {
	title: string;
}


const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="ShiftPulse time tracking solution for workforce management" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || "ShiftPulse"}</title>
		<script is:inline>
			const theme = (() => {
				if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
					return localStorage.getItem("theme");
				}
				if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
					return "dark";
				}
				return "light";
			})();
			document.documentElement.dataset.theme = theme === "dark" ? "dark" : "light";
			document.documentElement.classList.toggle("dark", theme === "dark");
		</script>
	</head>
	<body class="bg-background text-foreground antialiased selection:bg-primary/30 selection:text-foreground">
		<!-- Header -->
		<header class="border-b border-border bg-card/80 backdrop-blur-md sticky top-0 z-50 shadow-sm transition-colors duration-200">
			<div class="safety-stripes" aria-hidden="true"></div>
			<nav class="container mx-auto px-4 py-4">
				<div class="flex items-center justify-between">
					<!-- Logo -->
					<a href="/" class="flex items-center gap-3 group transition-transform duration-200 hover:scale-105 focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 rounded-sm outline-none">
						<div class="w-10 h-10 bg-primary flex items-center justify-center font-display font-bold text-primary-foreground rounded-sm shadow-sm group-hover:shadow-primary/20 transition-shadow">
							SP
						</div>
						<div>
							<div class="font-display font-bold text-lg text-foreground leading-none uppercase tracking-tight">
								ShiftPulse
							</div>
							<div class="font-data text-[10px] text-muted-foreground leading-none">
								Workforce Management
							</div>
						</div>
					</a>

					<!-- Desktop Navigation -->
					<div class="hidden md:flex items-center gap-8">
						<a href="/features" class="text-muted-foreground hover:text-primary transition-colors font-heading text-sm focus-visible:text-primary outline-none">
							Features
						</a>
						<a href="/pricing" class="text-muted-foreground hover:text-primary transition-colors font-heading text-sm focus-visible:text-primary outline-none">
							Pricing
						</a>
						<a href="/about" class="text-muted-foreground hover:text-primary transition-colors font-heading text-sm focus-visible:text-primary outline-none">
							About
						</a>
						<a
							href="/pricing"
							class="bg-primary text-primary-foreground hover:bg-primary-hover active:bg-primary-active transition-colors px-6 py-2 font-heading font-semibold text-sm rounded-sm shadow-sm focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 outline-none"
						>
							Get Started
						</a>
						<ThemeToggle client:load />
					</div>

					<!-- Mobile Menu Button -->
					<div class="md:hidden flex items-center gap-4">
						<ThemeToggle client:load />
						<button class="text-muted-foreground hover:text-primary transition-colors p-2 focus-visible:ring-2 focus-visible:ring-primary rounded-sm outline-none" aria-label="Toggle mobile menu">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
							</svg>
						</button>
					</div>
				</div>
			</nav>
		</header>

		<!-- Main Content -->
		<main id="main-content" class="min-h-screen">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="bg-muted border-t border-border mt-20 relative overflow-hidden">
			<div class="absolute inset-0 bg-noise opacity-20 pointer-events-none" aria-hidden="true"></div>
			<div class="safety-stripes" aria-hidden="true"></div>

			<div class="container mx-auto px-4 py-16 relative z-10">
				<!-- Footer Grid -->
				<div class="grid md:grid-cols-5 gap-12 mb-12">
					<!-- Brand Column -->
					<div class="md:col-span-2">
						<div class="flex items-center gap-3 mb-6">
							<div class="w-10 h-10 bg-primary flex items-center justify-center font-display font-bold text-primary-foreground rounded-sm">
								SP
							</div>
							<div class="font-display font-bold text-xl text-foreground uppercase tracking-tight">
								ShiftPulse
							</div>
						</div>
						<p class="text-muted-foreground text-sm leading-relaxed mb-6 max-w-md">
							Enterprise workforce management for fulfillment warehouses and manufacturing facilities.
							Built for industrial excellence with precision time tracking and advanced analytics.
						</p>
						<div class="flex items-center gap-3 mb-4">
							<span class="led-indicator active" aria-hidden="true"></span>
							<span class="font-data text-xs text-muted-foreground uppercase tracking-wider">
								System Operational
							</span>
						</div>
						<div class="text-sm text-muted-foreground">
							Trusted by <span class="text-primary font-display font-bold">500+</span> facilities worldwide
						</div>
					</div>


					<!-- Product Column -->
					<div>
						<h4 class="font-industrial text-foreground text-xs mb-4">
							Product
						</h4>
						<ul class="space-y-3 text-sm">
							<li>
								<a href="/features" class="text-muted-foreground hover:text-primary transition-colors">
									Features
								</a>
							</li>
							<li>
								<a href="/pricing" class="text-muted-foreground hover:text-primary transition-colors">
									Pricing
								</a>
							</li>
							<li>
								<a href="/about" class="text-muted-foreground hover:text-primary transition-colors">
									About
								</a>
							</li>
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									Documentation
								</a>
							</li>
						</ul>
					</div>

					<!-- Support Column -->
					<div>
						<h4 class="font-industrial text-foreground text-xs mb-4">
							Support
						</h4>
						<ul class="space-y-3 text-sm">
							<li>
								<a href="mailto:support@shiftpulse.com" class="text-muted-foreground hover:text-primary transition-colors">
									Email Support
								</a>
							</li>
							<li>
								<a href="tel:+1-800-SHIFTPULSE" class="text-muted-foreground hover:text-primary transition-colors">
									1-800-SHIFTPULSE
								</a>
							</li>
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									Help Center
								</a>
							</li>
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									API Reference
								</a>
							</li>
						</ul>
					</div>

					<!-- Company Column -->
					<div>
						<h4 class="font-industrial text-foreground text-xs mb-4">
							Company
						</h4>
						<ul class="space-y-3 text-sm">
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									Careers
								</a>
							</li>
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									Privacy Policy
								</a>
							</li>
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									Terms of Service
								</a>
							</li>
							<li>
								<a href="#" class="text-muted-foreground hover:text-primary transition-colors">
									Security
								</a>
							</li>
						</ul>
					</div>
				</div>

				<!-- Footer Bottom -->
				<div class="border-t border-border pt-8 relative z-10">
					<div class="flex flex-col md:flex-row justify-between items-center gap-6">
						<div class="text-sm text-muted-foreground">
							&copy; 2025 ShiftPulse. All rights reserved.
						</div>

						<!-- Compliance Badges -->
						<div class="flex items-center gap-6 flex-wrap justify-center">
							<div class="font-data text-xs text-muted-foreground flex items-center gap-2">
								<div class="w-2 h-2 bg-secondary rounded-full" aria-hidden="true"></div>
								SOC 2 Type II
							</div>
							<div class="font-data text-xs text-muted-foreground flex items-center gap-2">
								<div class="w-2 h-2 bg-secondary rounded-full" aria-hidden="true"></div>
								99.9% Uptime SLA
							</div>
							<div class="font-data text-xs text-muted-foreground flex items-center gap-2">
								<div class="w-2 h-2 bg-secondary rounded-full" aria-hidden="true"></div>
								Enterprise Security
							</div>
							<div class="font-data text-xs text-muted-foreground flex items-center gap-2">
								<div class="w-2 h-2 bg-secondary rounded-full" aria-hidden="true"></div>
								GDPR Compliant
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="safety-stripes" aria-hidden="true"></div>
		</footer>
	</body>
</html>
