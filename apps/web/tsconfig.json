{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"target": "ESNext",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["vite/client", "vite-plugin-pwa/client", "@vitejs/plugin-rsc/types", "node"],
		"jsx": "react-jsx",
		"paths": {
			"~/*": ["./src/*"],
			"@monorepo/design-system": ["../../packages/design-system/src"]
		}

	}
}
