{
	"name": "@monorepo/design-system",
	"version": "1.0.0",
	"type": "module",
	"description": "Shared design system for React Router app and Astro marketing site",

	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./styles": "./src/styles/index.css",
		"./styles/full": "./src/styles/full.css",
		"./styles/fonts": "./src/styles/fonts.css",
		"./styles/theme": "./src/styles/theme.css",
		"./styles/base": "./src/styles/base.css",
		"./styles/typography": "./src/styles/typography.css",
		"./styles/effects": "./src/styles/effects.css",
		"./styles/patterns": "./src/styles/patterns.css",
		"./styles/animations": "./src/styles/animations.css",
		"./styles/panels": "./src/styles/panels.css",
		"./styles/indicators": "./src/styles/indicators.css",
		"./styles/mechanical": "./src/styles/mechanical.css",
		"./styles/utilities": "./src/styles/utilities.css"
	},


	"files": [
		"dist",
		"src/styles"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "eslint src tsup.config.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"react-aria-components": "^1.14.0",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@types/react": "^19.2.10",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	}
}
